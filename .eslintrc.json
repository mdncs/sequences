{
    "env": {
        "es6": true,
        "mocha": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "space-before-blocks": "warn",
        "arrow-spacing": "warn",
        "keyword-spacing": "warn",
        "space-infix-ops": "warn",
        "space-in-parens": "warn",
        "spaced-comment": "warn",
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "camelcase": "warn",
        "comma-spacing": "warn"
    }
}